---
import { siteConfig } from "../config";
const hasAwards = (siteConfig as any).awards && (siteConfig as any).awards.length > 0;
const awards = (siteConfig as any).awards || [];
---

{hasAwards && (
  <section id="awards" class="py-16 md:py-24" style="background-color: var(--color-bg)">
    <div class="mx-auto max-w-6xl px-8 sm:px-12 md:px-24">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
        <div class="lg:col-span-4 reveal">
          <h2
            class="font-heading text-2xl md:text-3xl font-bold"
            style={`color: ${siteConfig.accentColor}`}
          >
            Logros y Reconocimientos
          </h2>
          <div
            class="w-16 h-1 mt-3 rounded-full"
            style={`background-color: ${siteConfig.accentColor}`}
          />
        </div>

        <div class="lg:col-span-8">
          <div class="space-y-4">
            {awards.map((award: any, index: number) => (
              <div
                class="reveal card-hover p-5 md:p-6 rounded-xl border"
                style={`background-color: var(--color-surface); border-color: var(--color-surface-border); transition-delay: ${index * 0.1}s`}
              >
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
                  <div class="flex items-start gap-3 flex-1">
                    <div
                      class="shrink-0 w-9 h-9 rounded-lg flex items-center justify-center mt-0.5"
                      style={`background-color: ${siteConfig.accentColor}15`}
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke={siteConfig.accentColor} stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 6l4 6l5 -4l-2 10h-14l-2 -10l5 4z"></path>
                      </svg>
                    </div>
                    <div class="flex-1">
                      <h3 class="text-sm font-semibold leading-tight" style="color: var(--color-text)">
                        {award.title}
                      </h3>
                      <p class="text-sm mt-1 font-medium" style={`color: ${siteConfig.secondaryColor || '#102A43'}`}>
                        {award.institution}
                      </p>
                    </div>
                  </div>
                  <div class="flex items-center gap-2 sm:shrink-0 pl-12 sm:pl-0">
                    <span
                      class="text-xs font-medium px-2.5 py-1 rounded-full"
                      style={`background-color: ${siteConfig.accentColor}15; color: ${siteConfig.accentColor}`}
                    >
                      {award.year}
                    </span>
                    <span
                      class="text-xs font-medium px-2.5 py-1 rounded-full"
                      style={`background-color: ${siteConfig.secondaryColor || '#102A43'}12; color: ${siteConfig.secondaryColor || '#102A43'}`}
                    >
                      {award.type}
                    </span>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
)}

<div class="section-divider max-w-6xl mx-auto"></div>
