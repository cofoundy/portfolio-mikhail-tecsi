---
import { siteConfig } from "../config";
const hasAwards = (siteConfig as any).awards && (siteConfig as any).awards.length > 0;
const awards = (siteConfig as any).awards || [];
---

{hasAwards && (
  <section id="awards" class="py-16 md:py-24" style="background-color: var(--color-bg)">
    <div class="mx-auto max-w-6xl px-8 sm:px-12 md:px-24">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
        <div class="lg:col-span-4 reveal">
          <h2
            class="font-heading text-2xl md:text-3xl font-bold"
            style={`color: ${siteConfig.accentColor}`}
          >
            Logros y Reconocimientos
          </h2>
          <div
            class="w-16 h-1 mt-3 rounded-full"
            style={`background-color: ${siteConfig.accentColor}`}
          />
        </div>

        <div class="lg:col-span-8">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            {awards.map((award: any, index: number) => (
              <div
                class="reveal card-hover p-5 rounded-xl border"
                style={`background-color: var(--color-surface); border-color: var(--color-surface-border); transition-delay: ${index * 0.1}s`}
              >
                <div class="flex items-start gap-3">
                  <div
                    class="shrink-0 w-8 h-8 rounded-lg flex items-center justify-center"
                    style={`background-color: ${siteConfig.accentColor}15`}
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke={siteConfig.accentColor} stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M12 15l-2 5l9 -9h-5l2 -5l-9 9h5"></path>
                    </svg>
                  </div>
                  <div class="flex-1">
                    <h3 class="text-sm font-semibold leading-tight" style="color: var(--color-text)">
                      {award.title}
                    </h3>
                    <p class="text-xs mt-1 opacity-70" style="color: var(--color-text)">
                      {award.description}
                    </p>
                    <span
                      class="inline-block text-xs font-medium mt-2 px-2 py-0.5 rounded-full"
                      style={`background-color: ${siteConfig.accentColor}15; color: ${siteConfig.accentColor}`}
                    >
                      {award.year}
                    </span>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
)}

<div class="section-divider max-w-6xl mx-auto"></div>
