---
import { siteConfig } from "../config";

const nameParts = siteConfig.name.split(' ');
const initials = nameParts.length >= 2
  ? `${nameParts[0][0]}${nameParts[1][0]}`
  : nameParts[0].substring(0, 2).toUpperCase();
---

<div
  id="hero"
  class="relative isolate overflow-hidden py-24 md:min-h-screen flex items-center"
  style={`background-color: var(--color-bg)`}
>
  <!-- Subtle academic pattern -->
  <div class="absolute inset-0 -z-10 opacity-[0.03]">
    <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="academic-lines" x="0" y="0" width="100" height="100" patternUnits="userSpaceOnUse">
          <line x1="0" y1="50" x2="100" y2="50" stroke={siteConfig.accentColor} stroke-width="0.5"/>
          <line x1="50" y1="0" x2="50" y2="100" stroke={siteConfig.accentColor} stroke-width="0.5"/>
        </pattern>
      </defs>
      <rect fill="url(#academic-lines)" width="100%" height="100%"/>
    </svg>
  </div>

  <div
    class="absolute top-0 right-0 w-1/2 h-full -z-10 opacity-10"
    style={`background: radial-gradient(ellipse at top right, ${siteConfig.accentColor}, transparent 60%)`}
  ></div>

  <div class="mx-auto px-8 sm:px-12 md:px-24 w-full max-w-6xl">
    <div class="flex flex-col md:flex-row items-center gap-8 md:gap-16">
      <!-- Avatar with initials -->
      <div
        class="hero-avatar w-32 h-32 md:w-40 md:h-40 rounded-full flex items-center justify-center text-4xl md:text-5xl font-bold text-white shrink-0"
        style={`background: linear-gradient(135deg, ${siteConfig.accentColor}, ${siteConfig.secondaryColor || '#102A43'})`}
      >
        {initials}
      </div>

      <div class="text-center md:text-left">
        <h1
          class="hero-name font-heading text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight"
          style="color: var(--color-text)"
        >
          {siteConfig.name}
        </h1>

        <!-- Decorative line -->
        <div class="hero-title mt-3 mb-4 mx-auto md:mx-0 h-0.5 w-20 rounded-full" style={`background-color: ${siteConfig.accentColor}`}></div>

        <p
          class="hero-title text-base sm:text-lg md:text-xl font-medium"
          style={`color: ${siteConfig.accentColor}`}
        >
          {siteConfig.title}
        </p>

        <!-- Stats Row -->
        <div class="hero-stats mt-6 flex flex-wrap items-center justify-center md:justify-start gap-6">
          <div class="text-center">
            <div class="text-2xl font-bold" style={`color: ${siteConfig.accentColor}`}>9</div>
            <div class="text-xs uppercase tracking-wider opacity-50">Publicaciones</div>
          </div>
          <div class="w-px h-8 bg-gray-300"></div>
          <div class="text-center">
            <div class="text-2xl font-bold" style={`color: ${siteConfig.accentColor}`}>5+</div>
            <div class="text-xs uppercase tracking-wider opacity-50">Conferencias</div>
          </div>
          <div class="w-px h-8 bg-gray-300"></div>
          <div class="text-center">
            <div class="text-2xl font-bold" style={`color: ${siteConfig.accentColor}`}>3</div>
            <div class="text-xs uppercase tracking-wider opacity-50">Paises</div>
          </div>
        </div>

        <!-- Contact -->
        <div class="hero-cta mt-6 flex justify-center md:justify-start gap-4">
          {siteConfig.social?.email && (
            <a
              href={`mailto:${siteConfig.social.email}`}
              class="inline-flex items-center gap-2 px-5 py-2.5 rounded-lg text-sm font-medium transition-all duration-300 hover:scale-105 text-white"
              style={`background-color: ${siteConfig.accentColor}`}
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"/>
                <path d="M3 7l9 6l9 -6"/>
              </svg>
              Contacto
            </a>
          )}
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="hero-scroll absolute bottom-8 left-1/2 -translate-x-1/2 hidden md:block">
      <div class="scroll-indicator opacity-40">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 5v14M5 12l7 7 7-7"/>
        </svg>
      </div>
    </div>
  </div>
</div>
