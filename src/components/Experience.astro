---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{hasExperience && (
  <section id="experience" class="py-16 md:py-24" style="background-color: var(--color-bg)">
    <div class="mx-auto max-w-6xl px-8 sm:px-12 md:px-24">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
        <div class="lg:col-span-4 reveal">
          <h2
            class="font-heading text-2xl md:text-3xl font-bold"
            style={`color: ${siteConfig.accentColor}`}
          >
            Experiencia Profesional
          </h2>
          <div
            class="w-16 h-1 mt-3 rounded-full"
            style={`background-color: ${siteConfig.accentColor}`}
          />
        </div>

        <div class="lg:col-span-8">
          <div class="relative pl-8">
            <div class="absolute left-0 top-0 w-0.5 h-full rounded-full" style={`background-color: ${siteConfig.accentColor}20`}></div>

            {siteConfig.experience.map((exp: any, index: number) => (
              <div class="reveal relative mb-8 last:mb-0" style={`transition-delay: ${index * 0.15}s`}>
                <div
                  class="timeline-dot absolute -left-8 top-2 w-3.5 h-3.5 rounded-full border-2"
                  style={`border-color: ${siteConfig.accentColor}; background-color: ${siteConfig.accentColor}`}
                ></div>

                <div
                  class="card-hover p-5 md:p-6 rounded-xl border"
                  style={`background-color: var(--color-surface); border-color: var(--color-surface-border)`}
                >
                  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-4">
                    <div>
                      <h3 class="text-lg font-semibold" style="color: var(--color-text)">
                        {exp.title}
                      </h3>
                      <p class="text-base mt-1 font-medium" style={`color: ${siteConfig.secondaryColor || '#102A43'}`}>
                        {exp.company}
                      </p>
                    </div>
                    <span
                      class="text-xs font-medium mt-2 sm:mt-0 px-3 py-1 rounded-full"
                      style={`background-color: ${siteConfig.accentColor}15; color: ${siteConfig.accentColor}`}
                    >
                      {exp.dateRange}
                    </span>
                  </div>

                  <ul class="space-y-2 mt-4">
                    {exp.bullets.map((bullet: string) => (
                      <li class="flex items-start text-sm" style="color: var(--color-text); opacity: 0.8">
                        <span
                          class="inline-block w-1.5 h-1.5 rounded-full mt-2 mr-3 shrink-0"
                          style={`background-color: ${siteConfig.accentColor}`}
                        />
                        {bullet}
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
)}
