---
import { siteConfig } from "../config";
---

<section id="conferences" class="py-16 md:py-24" style="background-color: var(--color-bg)">
  <div class="mx-auto max-w-6xl px-8 sm:px-12 md:px-24">
    <h2 
      class="font-heading text-2xl md:text-3xl font-bold mb-8 md:mb-12"
      style={`color: ${siteConfig.accentColor}`}
    >
      Conferencias y Ponencias
    </h2>

    <div class="grid gap-4 md:grid-cols-2">
      {siteConfig.conferences?.map((conf) => (
        <div 
          class="p-6 rounded-xl border transition-all duration-300 hover:shadow-md"
          style="background-color: var(--color-surface); border-color: rgba(59, 27, 74, 0.1)"
        >
          <div class="flex items-start gap-4">
            <div 
              class="shrink-0 px-3 py-1 rounded-full text-xs font-semibold"
              style={`background-color: ${siteConfig.accentColor}20; color: ${siteConfig.accentColor}`}
            >
              {conf.role}
            </div>
          </div>
          <h3 class="mt-3 text-base font-semibold" style="color: var(--color-text)">
            {conf.name}
          </h3>
          <p class="mt-2 text-sm opacity-60" style="color: var(--color-text)">
            {conf.location} â€¢ {conf.year}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
